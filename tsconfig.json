{
    "compilerOptions": {
        "module": "nodenext",
        "moduleResolution": "NodeNext",
        "target": "es2020",
        "lib": ["ES2020"],
        "strict": true,
        "verbatimModuleSyntax": true,
        "declaration": true,
        "sourceMap": true,
        "declarationMap": true,
        "pretty": true,
        "newLine": "lf",
        "outDir": "./dist"
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "**/*.test.ts", "**/*.bench.ts"]
}
